def calculadora():
    while True:
        n1 = int(input('Digite um número: '))
        operacao = input('Escolha uma operação (+, -, *, /): ')
        n2 = int(input('Digite outro número: '))
        
        
        
        if operacao not in ['+', '-', '*', '/']:
            print("Operação inválida! Tente novamente.")
            continue
        
        
        if operacao == '+':
            resultado = n1 + n2
        elif operacao == '-':
            resultado = n1 - n2
        elif operacao == '*':
            resultado = n1 * n2
        elif operacao == '/':
            
            if n2 == 0:
                print("Erro: Divisão por zero não permitida.")
                continue
            resultado = n1 / n2
            
        
        print(f'O resultado é: {resultado}')

        
        continuar = int(input("Deseja realizar outra operação?\n1 - Sim\n2 - Não\n"))
        if continuar == 2:
            print("Obrigado por usar a calculadora!")
            break  

calculadora()
